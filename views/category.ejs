<h2>Posts in <%= categoryName %> Category :</h2>
<ul class="article-ul">
    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <!-- add image here..... -->
          <img class="image-index" src="../uploads/<%= post.image %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
                
            </li>
        <% }) %>
    <% } else { %>
        <p>No posts found in this category.</p>
    <% } %>
</ul>
<a href="/">Back to Home</a>